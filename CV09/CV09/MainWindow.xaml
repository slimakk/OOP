<Window x:Class="CV09.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CV09"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button x:Name="button0" Content="0" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Click="button_Click" Width="140" Grid.ColumnSpan="2" Height="42" FontSize="20"/>
        <Button x:Name="buttonPoint" Grid.Column="2" Content="," HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="button1" Content="1" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="button2" Content="2" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="1"/>
        <Button x:Name="button3" Content="3" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="2"/>
        <Button x:Name="button4" Content="4" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="button5" Content="5" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="1"/>
        <Button x:Name="button6" Content="6" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="2"/>
        <Button x:Name="button7" Content="7" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="button8" Content="8" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="1"/>
        <Button x:Name="button9" Content="9" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="2"/>
        <Button x:Name="buttonPlus" Grid.Column="3" Content="+" HorizontalAlignment="Center" Grid.Row="6" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonMinus" Grid.Column="3" Content="-" HorizontalAlignment="Center" Grid.Row="5" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonMultiply" Grid.Column="3" Content="*" HorizontalAlignment="Center" Grid.Row="4" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonDivide" Grid.Column="3" Content="/" HorizontalAlignment="Center" Grid.Row="3" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonFraction" Content="1/x" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonCE" Content="CE" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="1"/>
        <Button x:Name="buttonC" Content="C" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="2"/>
        <Button x:Name="buttonModulo" Grid.Column="3" Content="%" HorizontalAlignment="Center" Grid.Row="2" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonMC" Content="MC" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonMR" Content="MR" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="1"/>
        <Button x:Name="buttonMS" Content="MS" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="60" FontSize="20" Grid.Column="2"/>
        <Button x:Name="buttonM_Plus" Grid.Column="3" Content="M+" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <Button x:Name="buttonM_Minus" Grid.Column="4" Content="M-" HorizontalAlignment="Center" Grid.Row="1" VerticalAlignment="Center" Height="42" Width="60" FontSize="20"/>
        <TextBox x:Name="display" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Center" Width="333" Height="42" Grid.ColumnSpan="5" Margin="27,0,0,0" FontSize="24" TextAlignment="Center" IsReadOnly="true"/>
    </Grid>
</Window>
